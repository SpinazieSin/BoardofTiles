import java.util.*;

public class Units {
        
    // Unit has tree fields, hitpoints weapon skill and
    // character name.
    public int hitPoints;
    public int weaponSkill;
    public String charName;
        
    // Unit class has one constructor, used for all units
    public Unit(int hitPoints, int weaponSkill, String charName) {
        this.hitPoints = hitPoints;
        this.weaponSkill = weaponSkill;
        this.charName = charName;
    }  
}
